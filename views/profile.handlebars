<div class="profile-main">
  <div class="login modal-dialog login-modal-dialog text-center">
    <div class="col-sm-9 main-section login-main-section">
      <div class="modal-content login-modal-content">
        <div class="col-12 user-img">
          <img src="/assets/img/face.png" alt="">
        </div>
        <div class="col-12 form-input">
          <div id="my-registration-form">
            <div class="form-group login-form-group login-form-group-email">
              <div class="form-control"> {{person.name}}</div>
            </div>
            <div class="form-group login-form-group login-form-group-email">
              <div class="form-control"> {{person.email}}</div>
            </div>
            <button id="delete-form" type="button" class="btn btn-danger login-button" data-toggle="modal" data-target="#exampleModal">
              <i class="far fa-trash-alt"></i>Delete</button>
          </div>
        </div>
        <div class="col-12">
          <p class="message registered-text">Back To Home ?
            <a href="/" class="register-link"> Home </a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content mymodal">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="my-delete-form">
          <div>Are You sure?</div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button id="delete-confirm" type="submit" class="btn btn-primary">Confirm</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  const deleteForm = document.getElementById('my-delete-form');
  deleteForm.onsubmit = function (e) {
    e.preventDefault();
    console.log('in delete form');
    deleteForm.setAttribute("method", "GET");
    deleteForm.setAttribute("action", "/profile/delete");
    deleteForm.submit();
  }
</script>